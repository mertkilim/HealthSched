@using HealthSched.Models.Models.Concrete
@using HealthSched.UI.Models

@model HealthSched.Models.DTOs.TitleDTOs.UpdateTitleDTO

<form method="post">
    <div style="align-items:center" class="card">

        <div class="card-body">
                <div style="justify-content:center" class="mb-3">
                    <label asp-for="@Model.TitleName" class="form-label">Title Adı</label>
                <input asp-for="@Model.TitleName" class="form-control">
                <div class="text-danger"> <span asp-validation-for="@Model.TitleName"></span> </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success form-control" type="submit">Kaydet</button>
                </div>
                <div>
                    <a asp-controller="Title" asp-action="Index" class="btn btn-secondary form-control">Listeye Dön</a>
                </div>
        </div>
    </div>
</form>


@section Scripts
{
    <partial name ="_ValidationScriptsPartial"/>

}