@using HealthSched.Models.Models.Concrete
@model IEnumerable<Policlinic>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container my-5">
    <div style="margin-bottom:30px" class="form-group">
        <a asp-controller="Policlinic" asp-action="Create" class="btn btn-success">Yeni Kayıt Oluştur</a>
    </div>
    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>Poliklinik Adı</th>
                <th>Oluşturulma Tarihi</th>
                <th>Değiştirilme Tarihi</th>
                <th>Hekimler</th>
                <th>Güncelle & Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var policlinic in Model)
            {
                <tr class="align-middle">
                    <td>@policlinic.PoliclinicName</td>
                    <td>@policlinic.CreatedDate</td>
                    <td>@policlinic.UpdatedDate</td>
                    <td>
                        <a asp-action="GetDoctors" asp-route-id="@policlinic.Id" type="button" class="btn btn-info">
                            <i class="bi bi-list"></i>
                        </a>
                    </td>
                    <td style="display:flex">
                        <form style="margin-left:20px" asp-action="Edit">
                            <input type="hidden" asp-for="@policlinic.Id" />
                            <button class="btn btn-primary" asp-action="Edit" asp-route-id="@policlinic.Id">
                                <i class="bi bi-pen-fill"></i>
                            </button>
                        </form>
                        <form style="margin-left:auto; margin-right:20px" asp-action="Delete">
                            <button class="btn btn-danger" asp-action="Delete" asp-route-id="@policlinic.Id">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>