
@model HealthSched.Models.DTOs.PoliclinicDTOs.UpdatePoliclinicDTO

<form method="post">
    <div style="align-items:center" class="card">

        <div class="card-body">
            <div style="justify-content:center" class="mb-3">
                <label asp-for="@Model.PoliclinicName" class="form-label">Poliklinik Adı</label>
                <input asp-for="@Model.PoliclinicName" class="form-control">
                <div class="text-danger"> <span asp-validation-for="@Model.PoliclinicName"></span> </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success form-control" type="submit">Kaydet</button>
            </div>
            <div>
                <a asp-controller="Policlinic" asp-action="Index" class="btn btn-secondary form-control">Listeye Dön</a>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}