@page
@model RegisterModel
@{
    ViewData["Title"] = "Hesap Oluştur";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-dark">Hesap Oluştur</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form class="row" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">HealthSched Hastane Randevu Sistemi</h3>
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Name" class="form-control" aria-required="true"/>
                        <label class="ms-2 text-muted" asp-for="Input.Name">Ad</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Surname" class="form-control" aria-required="true"/>
                        <label class="ms-2 text-muted" asp-for="Input.Surname">Soyad</label>
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.IdentificationNumber" class="form-control" aria-required="true" type="number" maxlength="99999999998">
                        <label class="ms-2 text-muted" asp-for="Input.IdentificationNumber">TC. Kimlik No</label>
                        <span asp-validation-for="Input.IdentificationNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true"/>
                        <label class="ms-2 text-muted" asp-for="Input.PhoneNumber">Telefon Numarası</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div style="align-items:center ; display:flex; justify-content:center" class="form-floating mb-3 col-md-6">
                        <div>
                            <label style="margin-right:10px" class="ms-2 text-muted" asp-for="Input.Gender">Cinsiyet :</label>
                            <input type="radio" asp-for="Input.Gender" value="true" /> Erkek
                            <input style="margin-left:10px" type="radio" asp-for="Input.Gender" value="false"/> Kadın
                        </div>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.BirthDate" class="form-control" aria-required="true" type="date"/>
                        <label class="ms-2 text-muted" asp-for="Input.BirthDate">Doğum Tarihi</label>
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label class="ms-2 text-muted" asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="ms-2 text-muted">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Şifrenizi Tekrar Giriniz.</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    @* <div class="form-floating mb-3">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>-Rol Seçiniz-</option>
                    </select>
                    </div> *@
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Kaydol</button>
                    </div>
                </form>
            </div>
            <div class="col-md-12">
                <section>
                    <p class="divider-text d-flex pt-3">veya</p>
                    <h3 class="text-center">Diğer seçeneklerle giriş yapınız.</h3>
                    <h4 class="text-center">(En kısa sürede sizlerin kullanımına açılacak)</h4>
                   @*  @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    Hesap oluşturmak için bu sayfayı kullanabilirsiniz.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" value="Kaydol" class="btn btn-primary">Kaydol</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    // } *@
                </section>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
