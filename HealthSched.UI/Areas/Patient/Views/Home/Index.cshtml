    @if(User.Identity.IsAuthenticated == true)
    {
        if (User.IsInRole(SD.Role_Patient))
        {
            <div style="margin-top:200px">
                <h1>@User.Identity.Name</h1>
                <h1 style="margin-top:20px">HASTANE RANDEVU SİSTEMİNE HOŞGELDİNİZ</h1>
            </div>
        }
        else
        {
            <div style="margin-top:200px">
                <h1>@User.Identity.Name</h1>
                <h1 style="margin-top:20px">HASTANE RANDEVU SİSTEMİ YÖNETİM PANELİNE HOŞGELDİNİZ</h1>
            </div>
        }

    }
    else
    {
    <h1 style="margin-top:300px" class="display-4">HEALTHSCHED </h1>
    <h1>HASTANE RANDEVU SİSTEMİNE HOŞGELDİNİZ</h1>
